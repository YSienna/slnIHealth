    <script src="/js/jquery.slicknav.js"></script>
    <script src="/js/mixitup.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="~/js/ScrollReveal.js"></script>
    <script src="~/js/sweetalert2.js"></script>
    <!-- FontAwesome 連結 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Bootstrap5 連結 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>

    <!-- Google Font -->
    @*<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">*@

    <!-- Css Styles -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <link href="~/css/sweetalert2.css" rel="stylesheet" />
    <script src="https://cdn.ckeditor.com/ckeditor5/34.2.0/classic/ckeditor.js"></script>


    <style>
        body {
            /*background-color: #F0FFF0;*/
        }
            .container-all {
                display: flex;
                align-items: stretch;
            }

        #sidebar {
            width: 250px;
            height: 100%;
            background-color: #7fad39;
            color: white;
            transition: 1s;
        }

            #sidebar.active {
                margin-left: -200px;
            }

        .container-right {
            /*background-color: #F0FFF0;*/
            /*background-color: rgba(168, 186, 32, 0.1);*/
            background-color: #EFF0EA;
            width: 100%;
            height: 100vh;
            text-align: center;
            padding: 30px;
        }

        .collapse-btn {
            position: relative;
            top: 1%;
            left: 200px;
            background-color: #7fad39;
            color: white;
            border: none;
            font-size: 30px;
            padding: 5px;
        }

            .collapse-btn:hover {
                background-color: #F0FFF0;
                color: #7fad39;
                transition: 0.4s;
            }

            #sidebar p {
                text-align: center;
                font-size: 20px;
                color:white;
                font-weight:800;
                padding: 10px;
            }

            #sidebar ul li a {
                padding: 10px;
                font-size: 20px;
                display: block;
                text-decoration: none;
                color: white;
            }

                #sidebar ul li a:hover {
                    color: #7fad39;
                    background: #fff;
                }

            .fas,
            .far,
            .fab {
                float: right;
            }

        .list-unstyled li a {
            background-color: #668800;
            font-style: italic;
        }

            @*@media (max-width:600px) {
                #sidebar {
                    margin-left: -100px;
                    width: 150px;
                    font-size: 20px;
                }
                .collapse-btn {
                    position: relative;
                    top: 1%;
                    left: 110px;
                }
                #sidebar.active {
                    margin-left: 0px;
                }
                #sidebar ul p {
                    font-size: 18px;
                    text-align: left;
                }
            }
                *@
        .btn-success {
            background-color: #7fad39;
            border:none;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <div class="container-all">
        <!-- 左邊 -->
        <div class="container-left">
            <!-- 導覽列 -->
            <nav id="sidebar">
                <!-- 展往/縮起來 按鈕 -->
                <button type="button" id="collapse" class="collapse-btn">
                    <i class="fas fa-align-left"></i>
                </button>
                <!-- List 列表 -->
                <ul>
                    <a href="~/Admin/Admin/AdminHome"><p>iHealth管理區</p></a>
                    <li>
                        <a href="~/Home/Index">返回首頁<i class="far fas fa-home"></i></a>
                    </li>
                    <li>
                        <a href="#memberList" data-bs-toggle="collapse" id="dropdown">會員管理<i class="far fas fa-address-card"></i></a>
                        <ul id="memberList" class="list-unstyled collapse">
                            <li>
                                <a class="collapse-item" href="~/Admin/MemberManage/Index">-會員資料管理<i class="far fas fa-user-edit"></i></a>
                            </li>
                            <li>
                                <a class="collapse-item" href="~/Admin/Authorities/Index">-會員權限管理<i class="far fas fa-user-shield"></i></a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="~/Admin/NewsManage/List">專欄管理<i class="fab fa fa-newspaper-o"></i> </a>
                    </li>
                    <li>
                        <a href="#CoachList" data-bs-toggle="collapse" id="dropdown">教練管理<i class="far fa fa-address-book"></i></a>
                        <!-- 子連結列表  -->
                        <ul id="CoachList" class="list-unstyled collapse">
                            <li>
                                <a href="~/Admin/CoachManage/CoachList">-教練履歷審核<i class="far fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            </li>
                            <li>
                                <a href="~/Admin/CoachManage/RateList">-教練評論管理<i class="far fa fa-star-half-o" aria-hidden="true"></i></a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#ShoppingList" data-bs-toggle="collapse" id="dropdown">商城管理<i class="far fa fa-shopping-bag"></i></a>
                        <!-- 子連結列表  -->
                        <ul id="ShoppingList" class="list-unstyled collapse">
                            <li>
                                <a href="~/Admin/ProductManage/ProductList">-產品管理<i class="far fa fa-cart-plus" aria-hidden="true"></i></a>
                            </li>
                            <li>
                                <a href="~/Admin/OrderManage/OrderList">-訂單管理<i class="far fa fa-list-ol" aria-hidden="true"></i></a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="~/Admin/Reply/ProblemReplyList">客服回覆<i class="far fa fa-comments"></i></a>
                    </li>

                    <li>
                        <a href="~/Admin/Admin/PowerBI">數據分析<i class="far fa fa-bar-chart"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
        <!-- 右邊 -->
        <div class="container-right" style="height:100vh;overflow:scroll;">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#collapse").on("click", function () {
                $("#sidebar").toggleClass("active");
                $(".fa-align-left").toggleClass("fa-chevron-circle-right");
            })
        })
        //==========================SweetAlert Button樣式調整================================
        const SwalGreen = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-secondary'
            },
            buttonsStyling: false
        })
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
