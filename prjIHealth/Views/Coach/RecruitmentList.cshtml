<section class="product spad">
    <div class="container">
        <div class="row">
            @*教練專區左側導覽列*@
            <div class="col-lg-3 col-md-5">
                <div class="sidebar" style="position:sticky;top:150px;">
                    <div class="sidebar__item">
                        <h5>教練專區</h5>
                        <ul>
                            <li><a href="~/Coach/CreateResume"><i class="fa-solid fa-pen"></i>履歷管理</a></li>
                            <li class="liThis"><a href="~/Coach/RecruitmentList" class="aLimit"><i class="fa-solid fa-user-check"></i>招生紀錄</a></li>
                            <li><a href="~/Coach/TeachingList" class="aLimit"><i class="fa-solid fa-dumbbell"></i>教課列表</a></li>
                        </ul>
                    </div>
                    <a href="~/Member/Edit" class="blog__btn"><span class="arrow_right"></span>會員專區</a>
                </div>
            </div>
            <div class="col-lg-9 col-md-7">                
                <table class="table reveal_b1">
                    @*表格head*@
                    <thead class="thead-dark">
                        <tr>
                            <th class="thNo">
                                No.
                            </th>
                            <th class="thName">
                                學員
                            </th>
                            <th class="thPhone">
                                聯絡電話
                            </th>
                            <th class="thPreferTime">
                                偏好時段
                            </th>
                            <th class="thTime">
                                發送時間<i class="fa fa-caret-down" aria-hidden="true"></i>
                            </th>
                            <th class="thStatus">
                                <select id="selStatus">
                                    <option value="0" selected>所有聯繫狀態</option>
                                    <option value="50">等待聯繫中</option>
                                    <option value="52">已聯繫，配對成功</option>
                                    <option value="51">已聯繫，暫無課程</option>
                                </select>
                            </th>
                            <th class="tdBtn"></th>
                        </tr>
                    </thead>
                    @*招生紀錄*@
                    <tbody id="tbdContact">
                        @{
                            int count = 0;
                            foreach (var c in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <a class="aMemberName" data-toggle="modal" data-target="#modalMember" href="">@c.MemberName</a>
                                        <input class="inpTheMemberID" type="hidden" value="@c.FMemberId" />
                                    </td>
                                    <td>
                                        @c.MemberPhone
                                    </td>
                                    <td>
                                        @c.AvailableTime
                                        <input class="inpPreferTime" type="hidden" value="@c.FAvailableTimeNum" />
                                    </td>
                                    <td>
                                        @c.StrContactDate
                                    </td>
                                    <td>

                                        @{
                                            if (c.FStatusNumber == 50)
                                            {
                                                <select class="selStatus colorWait" onchange="changeStatus();">
                                                    <option value="50" class="colorWait" selected>等待聯繫中</option>
                                                    <option value="51" class="colorFinish">已聯繫，暫無課程</option>
                                                    <option value="52" class="colorIng">已聯繫，配對成功</option>
                                                </select>
                                            }
                                            else if (c.FStatusNumber == 51)
                                            {
                                                <select class="selStatus colorFinish" onchange="changeStatus();">
                                                    <option value="50" class="colorWait">等待聯繫中</option>
                                                    <option value="51" class="colorFinish" selected>已聯繫，暫無課程</option>
                                                    <option value="52" class="colorIng">已聯繫，配對成功</option>
                                                </select>
                                            }
                                            else if (c.FStatusNumber == 52)
                                            {
                                                <select class="selStatus colorIng" onchange="changeStatus();">
                                                    <option value="50" class="colorWait">等待聯繫中</option>
                                                    <option value="51" class="colorFinish">已聯繫，暫無課程</option>
                                                    <option value="52" class="colorIng" selected>已聯繫，配對成功</option>
                                                </select>
                                            }
                                        }

                                    </td>
                                    <td class="tdBtn">
                                        <input type="hidden" value="@c.FCoachContactId" />
                                        <button class="btn btn-success btnCreateCourse" data-toggle="modal" data-target="#modalCreateCourse">排課</button>
                                        <button class="btn btn-secondary btnChat" data-toggle="modal" data-target="#modalChat" data-membername="@c.MemberName" onclick="getId();">訊息</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

