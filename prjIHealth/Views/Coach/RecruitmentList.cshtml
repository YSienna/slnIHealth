                        html += `<td>${value.availableTime} <input class="inpPreferTime" type = "hidden" value = "${value.fAvailableTimeNum}" /></td >`;
                        html += `<td>${value.strContactDate}</td>`;
                        if (value.fStatusNumber == 50) {
                            html += `<td><select class="selStatus colorWait" onchange="changeStatus();">`;
                            html += `<option value="50" class="colorWait" selected>等待聯繫中</option>`;
                            html += `<option value="51" class="colorFinish">已聯繫，暫無課程</option>`;
                            html += `<option value="52" class="colorIng">已聯繫，配對成功</option></select>`;
                        }
                        else if (value.fStatusNumber == 51) {
                            html += `<td><select class="selStatus colorFinish" onchange="changeStatus();">`;
                            html += `<option value="50" class="colorWait">等待聯繫中</option>`;
                            html += `<option value="51" class="colorFinish" selected>已聯繫，暫無課程</option>`;
                            html += `<option value="52" class="colorIng">已聯繫，配對成功</option></select>`;
                        }
                        else if (value.fStatusNumber == 52) {
                            html += `<td><select class="selStatus colorIng" onchange="changeStatus();">`;
                            html += `<option value="50" class="colorWait">等待聯繫中</option>`;
                            html += `<option value="51" class="colorFinish">已聯繫，暫無課程</option>`;
                            html += `<option value="52" class="colorIng" selected>已聯繫，配對成功</option></select>`;
                        }
                        html += `</td><td class="tdBtn"><input type="hidden" value="${value.fCoachContactId}" />`;
                        html += `<button class="btn btn-success btnCreateCourse" data-toggle="modal" data-target="#modalCreateCourse" onclick="btnCreateCourseClick();">排課</button>`;
                        html += `<button class="btn btn-secondary btnChat" data-toggle="modal" data-target="#modalChat" data-membername="${value.memberName}" onclick="getId();">訊息</button>`;
                    })
                    $("#tbdContact").html(html);
                })
            }
        }
        $(".thTime").click(function () {
            if ($(".thTime").children("i").hasClass("fa-caret-down")) {
                $(".thTime").children("i").removeClass("fa-caret-down").addClass("fa-caret-up");
            }
            else {
                $(".thTime").children("i").removeClass("fa-caret-up").addClass("fa-caret-down");
            }
            loadContact();
        });
        $("#selStatus").on("change", loadContact);

        var theContactId;
        var theContactName;
        function getId() {
            theContactId = $(event.target).parent("td").children("input").val();
            theContactName = $(event.target).attr("data-membername");
            $("#inpChatContactId").val(theContactId);
        }

        function loadChatText() {
            if (theContactId != undefined) {
                $.get("@Url.Content("~/Coach/loadChatText")", { id: theContactId }, function (texts) {
                    let html = "";
                    $.each(texts, function (idx, text) {
                        if (text.fIsCoach == true) {//教練自己
                            html += `<div class="col-3" ></div><div class="col-9" style="float:right">`;
                            html += `<p class="chatText" style="float: right; text-align: start;">${text.fContactText}`;
                            html += `<small>${text.time}</small></p></div>`;
                        }
                        else {//對方學員
                            html += `<div class="col-2"><label style="float:right;color:navy"><i class="fa fa-commenting-o" aria-hidden="true"></i> ${text.memberName}</label></div><div class="col-7">`;
                            html += `<p class="chatText" style="float: left; text-align: start;">${text.fContactText}`;
                            html += `<small>${text.time}</small></p></div><div class="col-3"></div></div >`;
                        }
                    })
                    $("#divChatBox").html(html);
                });
            }
        }


        var connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();
        //傳入
        connection.on("ReceiveMessage", function (CoachContactId, IsCoach, ContactText) {
            var now = new Date();
            var time = `${now.getHours()}:${now.getMinutes()}`;
            if (CoachContactId == theContactId) {
                let html = "";
                if (IsCoach == true) {//教練自己
                    html += `<div class="col-3" ></div><div class="col-9" style="float:right">`;
                    html += `<p class="chatText" style="float: right; text-align: start;">${ContactText}`;
                    html += `<small>${time}</small></p></div>`;
                }
                else {//對方學員
                    html += `<div class="col-2"><label style="float:right;color:navy"><i class="fa fa-commenting-o" aria-hidden="true"></i> ${theContactName}</label></div><div class="col-7">`;
                    html += `<p class="chatText" style="float: left; text-align: start;">${ContactText}`;
                    html += `<small>${time}</small></p></div><div class="col-3"></div></div >`;
                }
                $("#divChatBox").append(html);
            }
        });

        $("#modalChat").on("show.bs.modal", function () {
            loadChatText();
            connection.start();
        })
        $("#modalChat").on("hide.bs.modal", function () {
            connection.stop();
            $("#divChatBox").html("");
            $("#txtNewText").val("");
        })

        //送出訊息
        $("#btnSendText").click(function () {
            let id = $("#inpChatContactId").val();
            let text = $("#txtNewText").val();

            connection.invoke("SendMessage", `${id}`, true, `${text}`).catch(function (err) {
                return console.error(err.toString());
            }).catch(function (err) {
                return console.error(err.toString());
            });

            $("#txtNewText").val("");
            $.get("@Url.Content("~/Coach/saveText")", { FCoachContactId: id, FContactText: text })
        })

        //訊息Demo鍵
        $("#btnChatDemo1").click(function () {
            $("#txtNewText").val("嗨嗨～不好意思，您偏好的時間剛好有學員先約了，跟您改晚一點的時間方便嗎？")
        })

        $("#btnChatDemo2").click(function () {
            $("#txtNewText").val("沒問題呀！週五下午15:00好嗎？")
        })


    </script>
