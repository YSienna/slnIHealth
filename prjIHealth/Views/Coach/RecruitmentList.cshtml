@section Scripts{

    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script>
        //select樣式
        $(".nice-select").remove();
        //SweetAlert Button樣式調整
        const SwalWithGreen = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-secondary'
            },
            buttonsStyling: false
        })

        //改變聯繫狀態
        function changeStatus() {
            theSel = $(event.target);
            theContactId = $(event.target).parents("tr").find(".tdBtn").find("input").val();
            theStatusNum = $(event.target).val();
            $.get("@Url.Content("~/Coach/changeContactStatus")", { FCoachContactId: theContactId, FStatusNumber: theStatusNum }, function () {
                if (theStatusNum == 50) {
                    theSel.removeClass("colorWait").removeClass("colorFinish").removeClass("colorIng").addClass("colorWait");
                }
                else if (theStatusNum == 51) {
                    theSel.removeClass("colorWait").removeClass("colorFinish").removeClass("colorIng").addClass("colorFinish");
                }
                else {
                    theSel.removeClass("colorWait").removeClass("colorFinish").removeClass("colorIng").addClass("colorIng");
                }
            })
        }

        //點擊查看學員資料
        var theMemberId = 0;
        $(".aMemberName").on("click", showMember);
        function showMember() {
            theMemberId = $(event.target).next("input").val();
            $.get("@Url.Content("~/Coach/showMember")", { memberId: theMemberId }, function (member) {
                let html = "";//
                html += `<dt class="col-sm-3">會員編號</dt><dd class="col-sm-9">${member.fMemberId}</dd>`;
                html += `<dt class="col-sm-3">姓名</dt><dd class="col-sm-9">${member.memberName}</dd>`;
                html += `<dt class="col-sm-3">性別</dt><dd class="col-sm-9">${member.memberGender}</dd>`;
                html += `<dt class="col-sm-3">年齡</dt><dd class="col-sm-9">${member.memberAge}</dd>`;
                //TODO 改圖片路徑:member.memberPicturePath
                html += `<dt class="col-sm-3">相片</dt><dd class="col-sm-9"><div class="ddImg" style="background-image: url(/img/member/${member.memberPicturePath});"/></dd>`;
                html += `<dt class="col-sm-3">連絡電話</dt><dd class="col-sm-9">${member.memberPhone}</dd>`;
                html += `<dt class="col-sm-3">Email</dt><dd class="col-sm-9">${member.memberEmail}</dd>`;
                $("#dlMember").html(html);
            })
        }

        //彈出新增排課視窗
        var theMemberName;
        var selStatus;
        $(".btnCreateCourse").on("click", btnCreateCourseClick);
        function btnCreateCourseClick() {
            selStatus = $(event.target).parents("tr").find(".selStatus");
            theMemberName = $(event.target).parents("tr").find("a").text();
            theMemberId = $(event.target).parents("tr").find(".inpTheMemberID").val();
            theContactId = $(event.target).prev("input").val();
            thePreferTime = $(event.target).parents("tr").find(".inpPreferTime").val();
            $("#inpMemberName").val(theMemberName);
            $("#inpMemberId").val(theMemberId);
            $("#inpContactId").val(theContactId);
            $(".selTime1").val(thePreferTime.substr(0, 1));
            $(".selTime2").val(thePreferTime.substr(1, 2));
        }

        //新增課程(排課)
        $("#btnSendCourse").click(function () {

            if ($("#inpCourseName").val() == "" || $("#inpTotal").val() == "") {
                SwalWithGreen.fire(
                    '請勿空白',
                    '請檢查是否完整填寫課程名稱及堂數',
                    'error'
                )
            }
            else {
                SwalWithGreen.fire({
                    title: '確定要新增課程嗎?',
                    text: '確定新增後無法修改',
                    showDenyButton: false,
                    showCancelButton: true,
                    confirmButtonText: '確定',
                    cancelButtonText: `取消`,
                }).then((result) => {
                    /* Read more about isConfirmed, isDenied below */
                    if (result.isConfirmed) {
                        let time = `${$(".selTime1").val()}${$(".selTime2").val()}`;
                        $.post("@Url.Content("~/Coach/createCourse")", { FCoachContactId: $("#inpContactId").val(), FCourseName: $("#inpCourseName").val(), FCourseTotal: $("#inpTotal").val(), FAvailableTimeNum: time }, function () {
                            SwalWithGreen.fire('新增成功', '', 'success')
                            selStatus.val(52);
                            selStatus.removeClass("colorWait").removeClass("colorFinish").removeClass("colorIng").addClass("colorIng");
                            $("#modalCreateCourse").modal("hide");
                        })
                    }
                })
            }
        })

        //DEMO鍵
        $("#btnDemo").click(function () {
            $("#inpCourseName").val("增肌減脂課程2");
            $("#inpTotal").val(8);
        });

        //依發送時間及聯絡狀態排序
        function loadContact() {
            let html = "";
            if ($(".thTime").children("i").hasClass("fa-caret-up")) {
                $.get("@Url.Content("~/Coach/loadContact")", { flag: 0, statusNum:$("#selStatus").val() }, function (contacts) {
                    $.each(contacts, function (index, value) {
                        html += `<tr><td>${index+1}</td>`;
                        html += `<td><a class="aMemberName" data-toggle="modal" data-target="#modalMember" href="" onclick="showMember();">${value.memberName}</a>`;
                        html += `<input class="inpTheMemberID" type="hidden" value="${value.fMemberId}" /></td>`;
                        html += `<td>${value.memberPhone}</td>`;
