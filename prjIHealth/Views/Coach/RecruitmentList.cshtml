                            html += `<option value="52" class="colorIng">已聯繫，配對成功</option></select>`;
                        }
                        else if (value.fStatusNumber == 52) {
                            html += `<td><select class="selStatus colorIng" onchange="changeStatus();">`;
                            html += `<option value="50" class="colorWait">等待聯繫中</option>`;
                            html += `<option value="51" class="colorFinish">已聯繫，暫無課程</option>`;
                            html += `<option value="52" class="colorIng" selected>已聯繫，配對成功</option></select>`;
                        }
                        html += `</td><td class="tdBtn"><input type="hidden" value="${value.fCoachContactId}" />`;
                        html += `<button class="btn btn-success btnCreateCourse" data-toggle="modal" data-target="#modalCreateCourse" onclick="btnCreateCourseClick();">排課</button>`;
                        html += `<button class="btn btn-secondary btnChat" data-toggle="modal" data-target="#modalChat" data-membername="${value.memberName}" onclick="getId();">訊息</button>`;
                    })
                    $("#tbdContact").html(html);
                })
            }
            else {
                $.get("@Url.Content("~/Coach/loadContact")", { flag: 1, statusNum: $("#selStatus").val() }, function (contacts) {
                    $.each(contacts, function (index, value) {
                        html += `<tr><td>${index + 1}</td>`;
