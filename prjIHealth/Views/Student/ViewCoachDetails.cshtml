    <script>
        //GoTop
        $('#gotop').click(function () {
            $('html,body').animate({ scrollTop: 0 }, 'slow');
            return false;
        });
        $(window).scroll(function () {
            if ($(this).scrollTop() > 400) {
                $('#gotop').fadeIn();
            } else {
                $('#gotop').fadeOut();
            }
        });

 //載入評價(上方+tabpage)
        $(document).ready(function () {
            $.getJSON("@Url.Content("~/Student/GetCoachRate")", { "id": "@Model.FCoachId" },
                function (data) {
                    let countSum=0;
                    $.each(data, function (index, rate) {
                        countSum = countSum + rate.cr.fRateStar;
                    })
                    let avg = (countSum / data.length).toFixed(1);
                    for (let i = 1; i <= avg; i++) {
                        $(`#star${i}`).removeClass("starOrig");
                    }
                    $("#avgRate").text(`${avg}`);
                    if ($("#avgRate").text() == "NaN") {
                        $("#avgRate").text("0");
                    }
                    $("#spRate").text(`(${data.length})`);
                    $("#rateCount").text(`(${data.length})`);
                    displayRate(data);
                })
        })

        //評價排序
        $("#selSort").change(() => {
            let opt = $("#selSort option:selected").val();
            if (opt == 0) {
                $.getJSON("@Url.Content("~/Student/GetCoachRate")", { "id": "@Model.FCoachId" },
                    function (data) {
                        displayRate(data);
                    })
            }
            else if (opt == 1) {
                $.getJSON("@Url.Content("~/Student/GetNewRate")", { "id": "@Model.FCoachId" },
                    function (data) {
                        displayRate(data);
                    })
            }
            else if (opt == 2) {
                $.getJSON("@Url.Content("~/Student/GetDesRate")", { "id": "@Model.FCoachId" },
                    function (data) {
                        displayRate(data);
                    })
            }
            else if (opt == 3) {
                $.getJSON("@Url.Content("~/Student/GetAscRate")", { "id": "@Model.FCoachId" },
                    function (data) {
                        displayRate(data);
                    })
            }
        })

        //顯示評價
        function displayRate(data) {
            $(".divRate").empty();
            if (data.length == 0) {
                $(".divRate").text("此教練尚無評價");
                $(".divRate").css("text-align", "center").css("color","dimgray");
            }
            $.each(data, function (index, item) {
                console.log(item);
                $("#spRate").text(`(${data.length})`);
                $(".divRate").append(`<div class="feedback-item animate__animated animate__fadeIn" id=div${index}><p><b>${item.fMemberName}</b></p><div class="rate" id=r${index}></div></div>`);
                for (let i = 1; i <= 5; i++) {
                    $(`#r${index}`).append(`<img class="star starOrig" id="star${index}${i}"/>`);
                    $(".star").attr("src", "@Url.Content("~/img/coach/icon/star.png")");
                }
                for (let i = 1; i <= item.cr.fRateStar; i++) {
                    $(`#star${index}${i}`).removeClass("starOrig");
                }
                let year = `${item.cr.fRateDate}`.substr(0, 4);
                let month = `${item.cr.fRateDate}`.substr(4, 2);
                let day = `${item.cr.fRateDate}`.substr(6, 2);
                $(`#r${index}`).after(`<div id="t${index}"></div>`);
                if (item.cr.fRateText != null) {
                    $(`#t${index}`).append(`<p>${item.cr.fRateText}<p>`);
                }                
                $(`#t${index}`).after(`<p class="created">${year}年${month}月${day}日</p><hr>`);                
            })
            //顯示更多
            if (data.length > 5) {
                for (let i = 5; i <= data.length - 1; i++) {
                    $(`#div${i}`).hide();
                }
                $(".divRate").append('<div class="divMore"><button id=btnMore>顯示更多&nbsp;&nbsp;<i class="fa-solid fa-angle-down"></i></button></div>')
            }
            let click = 1;
            $("#btnMore").click(() => {
                for (let i = 5 * click; i <= 5*(click+1)-1; i++) {
                    $(`#div${i}`).show();
                }
                if (5 * (click + 1) - 1 >= data.length)
                    $("#btnMore").hide();
                click++;               
            })           
        }

        //推薦教練
        $(document).ready(function () {
            $.getJSON("@Url.Content("~/Student/GetRecCoach")", { "id": "@Model.FCoachId" },
                function (data) {
                    $(".divCoaches").empty();
                    $.each(data, function (index, item) {
                        $(".divCoaches").append(`<a href="/Student/ViewCoachDetails/${item.fCoachId}" id=a${index} class="aRec"></a>`);
                        $(`#a${index}`).append(`<div class="row divRec" id=rec${index}></div>`);
                        $(`#rec${index}`).append(`<div class="col-5" id=d1${index}></div>`).append(`<div class="col-7 divRecCoach" id=d2${index}></div>`)
                            .append(`<div class="divRecList" id=d3${index}></div>`);
                        $(`#d1${index}`).append(`<img id=img${index} class="coach_img">`);
                        $(`#img${index}`).attr("src", `../../img/Coach/coachImage/${item.fCoachImage}`);
                        $(`#d2${index}`).append(`<div class="divRecName"><h4><b>${item.fCoachName}</b></h4></div>`).append(`<div><span class="spRec">${item.fSlogan}</span></div>`);
                        $(`#d3${index}`).append(`<ul class="ulRec" id=ul${index}>`);
                        $(`#ul${index}`).append(`<li style="list-style:none" class="li" id=l1${index}></li>`).append(`<li style="list-style:none" class="li" id=l2${index}></li>`);
                        $(`#l1${index}`).append(`<img class="icon location"/><span><b>&nbsp;&nbsp;&nbsp;授課地區： </b>&nbsp;&nbsp;${item.cityName}</span>`);
                        $(".location").attr("src", "@Url.Content("~/img/Coach/icon/location.png")");
                        $(`#l2${index}`).append(`<img class="icon skill" /><span id=skill${index} class="recSkill"><b>&nbsp;&nbsp;&nbsp;專長： </b>&nbsp;&nbsp;</span>`)
                        $(".skill").attr("src", "@Url.Content("~/img/Coach/icon/skill.png")");

                        //取得專長項目
                        $.getJSON("@Url.Content("~/Student/GetSkillName")", { "id": `${item.fCoachId}` },
                            function (skills) {
                                let s = "";
                                $.each(skills, function (index, skill) {
                                    s += skill;
                                    s += "、";
                                })
                                s = s.substr(0, s.length - 1);
                                $(`#skill${index}`).append(`${s}`);
                            }
                        )
                    })
                    })
        })


